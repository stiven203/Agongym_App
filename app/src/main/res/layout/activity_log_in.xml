<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.agongym.store.activities.LogInActivity"
    tools:ignore="ExtraText"

    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        >

        <TableLayout
            android:id="@+id/layout_log_in"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp">

            <TableRow

                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/welcome_textView"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/welcome_message"
                    android:textColor="#000000"
                    android:textSize="25sp" />

            </TableRow>

            <TableRow

                android:layout_marginTop="30dp"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/editTextTextHomeEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:background="@drawable/edit_text_corners"
                    android:hint="@string/mail_hint"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    tools:ignore="LabelFor" />


            </TableRow>

            <TableRow
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <EditText
                    android:id="@+id/editTextTextHomePassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:background="@drawable/edit_text_corners"
                    android:hint="@string/password_hint"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    tools:ignore="LabelFor" />

            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"


                    >


                    <Button
                        android:id="@+id/login_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="@string/login_button" />

                    <Button
                        android:id="@+id/signuphome_button"
                        android:layout_width="100dp"
                        android:layout_height="50dp"

                        android:layout_marginLeft="20dp"
                        android:text="@string/signuphome_button" />
                </LinearLayout>


            </TableRow>



        </TableLayout>

        <TextView

            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"
            android:id="@+id/skip_text_view"
            android:layout_gravity="right"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP âž”" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>