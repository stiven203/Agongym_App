<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:descendantFocusability="blocksDescendants"
    >
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
       android:layout_margin="5dp"

        >

        <ImageView
            android:id="@+id/cart_product_image"

            android:layout_width="140dp"
            android:layout_height="140dp"
            android:contentDescription="@string/cart_img_description">

        </ImageView>

        <TableLayout
            android:layout_width="240dp"
            android:layout_height="130dp"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:id="@+id/cart_product_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="1dp"
                    android:text="PRODUCT NAME"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:textStyle="bold">

                </TextView>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:id="@+id/cart_product_size"
                        android:layout_weight="1"
                        android:layout_width="200dp"
                        android:layout_height="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="XL"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="2dp"
                        >
                    </TextView>



            </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >




                <TextView
                    android:id="@+id/cart_product_price"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_weight="5"
                    android:text="100â‚¬"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="2dp"

                    >
                </TextView>


                </TableRow>

                <TableRow>
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="55dp"
                        android:layout_span="1"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="left"
                        >



                        <Button
                            android:id="@+id/cart_minus_butt"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:text="-" />

                        <TextView
                            android:fontFamily="@font/montserrat"
                            android:id="@+id/cart_product_quantity"
                            android:layout_width="30dp"
                            android:layout_height="45dp"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:text="5"
                            />

                        <Button

                            android:id="@+id/cart_plus_butt"
                            android:layout_width="40dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:gravity="center"
                            android:text="+"
                            />

                        <Button
                            android:id="@+id/cart_remove_butt"
                            android:layout_width="50dp"
                            android:layout_height="45dp"
                            android:layout_weight="1"
                            android:backgroundTint="@color/black"
                            android:gravity="center"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/red"
                            android:textSize="15dp"


                            app:icon="@drawable/ic_baseline_delete_red_24"

                            />
                    </LinearLayout>

                </TableRow>


        </TableLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>